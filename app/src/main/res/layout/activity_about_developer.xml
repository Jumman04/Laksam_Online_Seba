<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".About_Developer">


    <!--===========================Developer Page Layout Line Start Here=========================-->
    <ScrollView
        android:id="@+id/about_developer_page_scrollview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/profile_background">

            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:src="@drawable/developer_photo_white"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp"/>

            <TextView
                android:id="@+id/developer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/kalpurush"
                android:gravity="center"
                android:text="মোঃ সজিব হোসেন"
                android:textColor="#00838F"
                android:textSize="19.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/developer_degination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developer_name"
                android:layout_marginTop="1sp"
                android:fontFamily="@font/kalpurush"
                android:gravity="center"
                android:text="ফাউন্ডার ও ডেভেলপার\n(লাকসাম অনলাইন সেবা অ্যাপস)"
                android:textColor="#00838F"
                android:textSize="16.5sp"
                android:textStyle="normal" />


            <!--  ==========Developer Contact Text Layout Start Here==========  -->

            <androidx.cardview.widget.CardView
                android:id="@+id/contact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/developer_degination"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="4dp"
                card_view:cardMaxElevation="6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/kalpurush"
                        android:gravity="center"
                        android:text="যোগাযোগ করুন"
                        android:textColor="#FF0000"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.3dp"
                        android:layout_marginTop="0dp"
                        android:background="#BCBCBC">

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginBottom="0dp"
                                android:orientation="vertical"
                                android:padding="0dp">


                                <!-- ================o1 Nos Item  Start Here==== -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="5">


                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/whatsApp_contact_btn"
                                                android:layout_width="fill_parent"
                                                android:layout_height="45dp"
                                                android:layout_margin="10dp"
                                                android:layout_marginLeft="0dp"
                                                android:layout_marginTop="0dp"
                                                android:layout_marginRight="0dp"
                                                android:layout_marginBottom="0dp"
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                card_view:cardBackgroundColor="@android:color/white"
                                                card_view:cardCornerRadius="4dp"
                                                card_view:cardElevation="4dp"
                                                card_view:cardMaxElevation="6dp">


                                                <ImageView
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="45dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_marginRight="5dp"
                                                    android:layout_weight="1"
                                                    android:src="@drawable/whatsapp_icon" />

                                            </androidx.cardview.widget.CardView>


                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/fb_contact_btn"
                                                android:layout_width="fill_parent"
                                                android:layout_height="45dp"
                                                android:layout_margin="10dp"
                                                android:layout_marginLeft="0dp"
                                                android:layout_marginTop="0dp"
                                                android:layout_marginRight="0dp"
                                                android:layout_marginBottom="0dp"
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                card_view:cardBackgroundColor="@android:color/white"
                                                card_view:cardCornerRadius="4dp"
                                                card_view:cardElevation="4dp"
                                                card_view:cardMaxElevation="6dp">


                                                <ImageView
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="45dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_marginRight="5dp"
                                                    android:layout_weight="1"
                                                    android:src="@drawable/facebook_icon" />

                                            </androidx.cardview.widget.CardView>


                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/gmail_contact_btn"
                                                android:layout_width="fill_parent"
                                                android:layout_height="45dp"
                                                android:layout_margin="10dp"
                                                android:layout_marginLeft="0dp"
                                                android:layout_marginTop="0dp"
                                                android:layout_marginRight="0dp"
                                                android:layout_marginBottom="0dp"
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                card_view:cardBackgroundColor="@android:color/white"
                                                card_view:cardCornerRadius="4dp"
                                                card_view:cardElevation="4dp"
                                                card_view:cardMaxElevation="6dp">


                                                <ImageView
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="45dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_marginRight="5dp"
                                                    android:layout_weight="1"
                                                    android:src="@drawable/gmail_icon" />

                                            </androidx.cardview.widget.CardView>


                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/fb_page_btn"
                                                android:layout_width="fill_parent"
                                                android:layout_height="45dp"
                                                android:layout_margin="10dp"
                                                android:layout_marginLeft="0dp"
                                                android:layout_marginTop="0dp"
                                                android:layout_marginRight="0dp"
                                                android:layout_marginBottom="0dp"
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                card_view:cardBackgroundColor="@android:color/white"
                                                card_view:cardCornerRadius="4dp"
                                                card_view:cardElevation="4dp"
                                                card_view:cardMaxElevation="6dp">


                                                <ImageView
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="45dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_marginRight="5dp"
                                                    android:layout_weight="1"
                                                    android:src="@drawable/fb_page_icon" />

                                            </androidx.cardview.widget.CardView>


                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/fb_group_btn"
                                                android:layout_width="fill_parent"
                                                android:layout_height="45dp"
                                                android:layout_margin="10dp"
                                                android:layout_marginLeft="0dp"
                                                android:layout_marginTop="0dp"
                                                android:layout_marginRight="0dp"
                                                android:layout_marginBottom="0dp"
                                                android:layout_weight="1"
                                                android:orientation="horizontal"
                                                card_view:cardBackgroundColor="@android:color/white"
                                                card_view:cardCornerRadius="4dp"
                                                card_view:cardElevation="4dp"
                                                card_view:cardMaxElevation="6dp">


                                                <ImageView
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="45dp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_marginRight="5dp"
                                                    android:layout_weight="1"
                                                    android:src="@drawable/fb_group_icon" />

                                            </androidx.cardview.widget.CardView>


                                        </LinearLayout>


                                    </RelativeLayout>


                                </LinearLayout>
                                <!-- ==================o1 Nos Item  End Here==== -->


                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--  ==========Developer Contact Text Layout Start Here==========  -->




            <!-- ========= 1 Nos News Item Code Start Here=============-->
            <androidx.cardview.widget.CardView
                android:id="@+id/prothom_alo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact2"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_color_after"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp"
                card_view:cardMaxElevation="6dp">






                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/kalpurush"
                        android:justificationMode="inter_word"
                        android:paddingHorizontal="5dp"
                        android:text="@string/developer_description"
                        android:textColor="#00796B"
                        android:textSize="18dp" />




            </androidx.cardview.widget.CardView>
            <!-- ========== 1 Nos News Item Code End Here==============-->




        </RelativeLayout>


    </ScrollView>
    <!--============================Developer Page Layout Line End Here==========================-->



</RelativeLayout>