<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".Splash_Screen">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />


        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/kalpurush"
            android:paddingHorizontal="2dp"
            android:paddingVertical="2dp"
            android:text="লাকসাম অনলাইন সেবা"
            android:textColor="#283593"
            android:textSize="18.5sp"
            android:textStyle="bold" />


        <ProgressBar
            android:id="@+id/loadingbar"
            style="@android:style/Widget.Material.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:progressBackgroundTint="#9AC2C1C1"
            android:progressTint="#FF0202"

            />

        <LinearLayout
            android:id="@+id/deveoper_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="76dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/developer_photo_white"
                card_view:civ_border_color="#B3B6B6"
                card_view:civ_border_width=".55dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:text="পরিকল্পনা ও বাস্তবায়ন"
                android:textColor="#283593"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="#CCC9C9">

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:text="মোঃ সজিব হোসেন"
                android:textColor="@color/purple_500"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:text="ফাউন্ডার ও ডেভেলপার"
                android:textColor="#2F75A1"
                android:textSize="15.5sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:text="(লাকসাম অনলাইন সেবা অ্যাপস)"
                android:textColor="#2F75A1"
                android:textSize="15.5sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:src="@drawable/sabbir_hossain_icon"
                app:civ_border_color="#B3B6B6"
                app:civ_border_width=".55dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:text="প্রধান তথ্য কর্মকর্তা"
                android:textColor="#283593"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="#CCC9C9">

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:text="মোঃ ইব্রাহিম খলিল সাব্বির"
                android:textColor="@color/purple_500"
                android:textSize="16.5sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>